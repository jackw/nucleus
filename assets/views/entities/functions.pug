mixin sassFunctions (sassFunctions)
  -for(var f in sassFunctions)
    +mixin(sassFunctions[f].sassFunction)

mixin sassFunction (sassFunction)
  div.SG-component
    div.SG-row
      div.SG-gr-8
        div.SG-mixin
          a.SG-anchor(name=sassFunction.hash)
          span.SG-mixin__name #{sassFunction.name}
          span.SG-mixin__parameters #{sassFunction.signature}
          if (sassFunction.deprecated)
            span.SG-pill deprecated
          span.SG-mixin__file #{sassFunction.file}
      div.SG-gr-4.SG-txt-right
        if sassFunction.example
          div.SG-button.SG-button--ico(data-d-code-preview-toggle)
            span.SG-ico.SG-ico--code
            | Show example

    div.SG-row
      div.SG-gr-12
        div.SG-p #{sassFunction.description}

    -if(sassFunction.parameters.length > 0)
      div.SG-row
        div.SG-gr-12
          +sassFunction-parameters(sassFunction.parameters)

    if sassFunction.example
      div.SG-row
        div.SG-gr-12
          div.SG-code.SG-code--hidden.SG-component__markup.language-scss(data-d-code-preview)
            code #{sassFunction.example}

mixin sassFunction-parameters(parameters)
  div.SG-row.SG-table
    div.SG-gr-3
      div.SG-table__head.SG-table__cell Parameter
    div.SG-gr-1
      div.SG-table__head.SG-table__cell Optional
    div.SG-gr-8
      div.SG-table__head.SG-table__cell Description

  -for(var p in parameters)
    div.SG-row.SG-table
      div.SG-gr-3
        div.SG-table__cell #{parameters[p].name}
      div.SG-gr-1
        div.SG-table__cell.SG-txt-center
          | !{parameters[p].optional ? '&#10004;' : '' }
      div.SG-gr-8
        div.SG-table__cell #{parameters[p].description}
